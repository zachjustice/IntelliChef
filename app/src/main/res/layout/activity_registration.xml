<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="intellichef.intellichef.RegistrationActivity"
    android:background="#f15c48">

    <ImageView
        android:layout_width="286dp"
        android:layout_height="43dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/intellichef"
        android:drawableBottom="#ffffff"
        android:layout_gravity="center"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/firstName"
        android:hint="first name"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginTop="22dp"
        android:drawableBottom="#ffffff"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lastName"
        android:hint="last name"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:drawableBottom="#ffffff"
        android:layout_below="@+id/firstName"
        android:layout_alignLeft="@+id/firstName"
        android:layout_alignStart="@+id/firstName"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:hint="email address"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:drawableBottom="#ffffff"
        android:layout_below="@+id/lastName"
        android:layout_alignLeft="@+id/lastName"
        android:layout_alignStart="@+id/lastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/username"
        android:hint="username"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:drawableBottom="#ffffff"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="password"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:drawableBottom="#ffffff"
        android:layout_below="@+id/username"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmPassword"
        android:hint="confirm password"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:drawableBottom="#ffffff"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />


    <Button
        android:text="Create Account"
        android:id="@+id/createAccount"
        style="@style/Widget.AppCompat.Button.Colored"

        android:textColor="#f15c48"
        android:background="#ffffff"
        android:drawableBottom="#ffffff"
        android:textSize="6pt"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="30dp"

        android:layout_below="@+id/confirmPassword"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
